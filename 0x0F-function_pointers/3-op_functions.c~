#include "3-calc.h"
#include <stdio.h>
#include <stdlib.h>
/**
 * op_add - add operation function
 *@a: first argument
 *@b: second argument
 * Return: the sum
 */
int op_add(int a, int b)
{
return (a + b);
}
/**
 * op_sub - differece operation function
 *@a: first argument
 *@b: second argument
 *Return: the difference
 */
int op_sub(int a, int b)
{
return (a - b);
}
/**
 * op_mul - multiplication operation function
 *@a: first argument
 *@b: second argument
 *Return: the product
 */
int op_mul(int a, int b)
{
return (a * b)
}
/**
 * op_div - division operation function
 *@a: first argument
 *@b: second argument
 *Return: result of division
 */
int op_div(int a, int b)
{
if (b == 0)
{
printf("Error");
exit(100);
}
return (a / b);
}
/**
 * op_mod - modulo operation function
 *@a: first argument
 *@b: second argument
 *Return: the rmainder of the division
 */
int op_mod(int a, int b)
{
if (b == 0)
{
printf("Error");
exit(100);
}
return (a % b);
}
